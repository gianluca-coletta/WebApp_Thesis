<html>
<%- include('./header.ejs');%>

    <body>
        <div class="container col-sm-12" id="mainform">
            <div id="signupbox" style=" margin-top:50px"
                class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Iscriviti</div>
                        <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink"
                                href="/home/login">Accedi</a></div>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" action="/registration/signup">
                            <% if (message !==null) { %>
                                <div class="alert alert-success col-sm-12">
                                    <%= message %>
                                </div>
                                <% } %>
                                    <!-- Nome -->
                                    <div class="form-group" id="nome">
                                        <label for="nome">Nome</label>
                                        <div>
                                            <input type="text" class="form-control" name="nome" placeholder="Nome">
                                            <span id="nome_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Cognome -->
                                    <div class="form-group" id="cogn">
                                        <label for="cognome">Cognome</label>
                                        <div>
                                            <input type="text" class="form-control" name="cognome"
                                                placeholder="Cognome">
                                            <span id="cogn_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Matricola -->
                                    <div class="form-group" id="matr">
                                        <label for="matricola">Matricola</label>
                                        <div>
                                            <input type="number" class="form-control" name="matricola"
                                                placeholder="Matricola">
                                            <span id="matr_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="form-group" id="mail">
                                        <label for="email">Indirizzo Email</label>
                                        <div>
                                            <input type="text" class="form-control" name="email"
                                                placeholder="Indirizzo Email">
                                            <span id="mail_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Password -->
                                    <div class="form-group" id="pass">
                                        <label for="password">Password</label>
                                        <div>
                                            <input type="password" class="form-control" name="password"
                                                placeholder="Password">
                                            <span id="pass_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Conferma password -->
                                    <div class="form-group" id="pass1">
                                        <label for="confermapassword">Conferma la
                                            Password</label>
                                        <div>
                                            <input type="password" class="form-control" name="password1"
                                                placeholder="Conferma la Password">
                                            <span id="pass1_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- NumeroTelefonico -->
                                    <div class="form-group" id="mob">
                                        <label for="numerotelefonico">Recapito
                                            Telefonico</label>
                                        <div>
                                            <input type="number" class="form-control" name="numerotelefonico"
                                                placeholder="Recapito Telefonico">
                                            <span id="mob_error" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- CorsoDiLaurea -->
                                    <div class="form-group" id="cdl">
                                        <label for="corsodilaurea">Corso di
                                            Laurea</label>
                                        <div>
                                            <select name="corsodilaurea" class="form-control">
                                                <option value="none">
                                                    Scegli il tuo corso di laurea
                                                </option>
                                                <% for (var i=0; i < cdl.length; i++) { %>
                                                    <option value="<%= cdl[i].CodiceCL %>">
                                                        <%= cdl[i].Titolo %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                            <span id="cdl_error" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="pull-right">
                                        <!-- Save -->
                                        <button id="btn-signup" type="submit" class="btn btn-info"><i
                                                class="icon-hand-right"></i> Crea account</button>

                                        <!-- Cancel -->
                                        <a class="btn btn-default" href="/" role="button">Annulla</a>

                                    </div>




                        </form>
                    </div>
                </div>


            </div>
        </div>


        <script>

            function isValidEmailAddress(emailAddress) {
                var pattern = /^([a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+(\.[a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+)*|"((([ \t]*\r\n)?[ \t]+)?([\x01-\x08\x0b\x0c\x0e-\x1f\x7f\x21\x23-\x5b\x5d-\x7e\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|\\[\x01-\x09\x0b\x0c\x0d-\x7f\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))*(([ \t]*\r\n)?[ \t]+)?")@(([a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.)+([a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.?$/i;
                return pattern.test(emailAddress);
            }

            function hideErrors() {
                $("#nome_error").hide();
                $("#cogn_error").hide();
                $("#matr_error").hide();
                $("#mail_error").hide();
                $("#pass_error").hide();
                $("#pass1_error").hide();
                $("#mob_error").hide();
                $("#cdl_error").hide();
            }

            hideErrors();

            $("#btn-signup").click(function () {
                var hasError = false;

                hideErrors();

                var nome = $("[name='nome']").val();
                var cogn = $("[name='cognome']").val();
                var matr = $("[name='matricola']").val();
                var mail = $("[name='email']").val();
                var pass = $("[name='password']").val();
                var pass1 = $("[name='password1']").val();
                var mob = $("[name='numerotelefonico']").val();
                var cdl = $("[name='corsodilaurea']").val();

                $("#nome").removeClass("has-error");
                $("#cogn").removeClass("has-error");
                $("#matr").removeClass("has-error");
                $("#mail").removeClass("has-error");
                $("#pass").removeClass("has-error");
                $("#pass1").removeClass("has-error");
                $("#mob").removeClass("has-error");
                $("#cdl").removeClass("has-error");



                if (nome === "") {
                    hasError = true;
                    $("#nome").addClass("has-error");
                    $("#nome_error").text("Il campo nome è obbligatorio");
                    $("#nome_error").show();
                }

                if (cogn === "") {
                    hasError = true;
                    $("#cogn").addClass("has-error");
                    $("#cogn_error").text("Il campo cognome è obbligatorio");
                    $("#cogn_error").show();
                }

                if (matr === "") {
                    hasError = true;
                    $("#matr").addClass("has-error");
                    $("#matr_error").text("Il campo matricola è obbligatorio");
                    $("#matr_error").show();
                }

                if (mail === "" || !isValidEmailAddress(mail)) {
                    hasError = true;
                    if (mail === "") {
                        $("#mail").addClass("has-error");
                        $("#mail_error").text("Il campo email è obbligatorio");
                        $("#mail_error").show();
                    }
                    else {
                        $("#mail").addClass("has-error");
                        $("#mail_error").text("L'email non è nel formato corretto");
                        $("#mail_error").show();
                    }
                }

                if (pass === "") {
                    hasError = true;
                    $("#pass").addClass("has-error");
                    $("#pass_error").text("Il campo password è obbligatorio");
                    $("#pass_error").show();
                }

                if (pass1 === "" || pass.toString() !== pass1.toString()) {
                    if (pass1 === "") {
                        hasError = true;
                        $("#pass1").addClass("has-error");
                        $("#pass1_error").text("Conferma la password inserita");
                        $("#pass1_error").show();
                    }
                    else {
                        hasError = true;
                        $("#pass1").addClass("has-error");
                        $("#pass1_error").text("La password non coincide");
                        $("#pass1_error").show();
                    }
                }

                if (mob === "") {
                    hasError = true;
                    $("#mob").addClass("has-error");
                    $("#mob_error").text("Il campo numero telefonico è obbligatorio");
                    $("#mob_error").show();
                }


                if (cdl === "none") {
                    hasError = true;
                    $("#cdl").addClass("has-error");
                    $("#cdl_error").text("Selezionare la propria Università");
                    $("#cdl_error").show();
                }

                if (hasError)
                    return false;
            });


        </script>

    </body>

</html>